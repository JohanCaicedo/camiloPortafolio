---

<div class="grid grid-cols-4 gap-4">
  {projects.map((project) => (
    <a href={project.link} key?={project.id} class={`${project.colS} ${project.rowS}`}>
      <div
        class={`p-5 rounded-lg shadow-md border border-[#fafaf6] dark:border-[#fafaf6] flex flex-col items-start hover:scale-105 duration-300 transition-transform ease-in-out ${project.bgColor} ${project.textColor} ${project.darkBgColor} ${project.darkTextColor}`}
      >
        <h2 class="text-xl font-extrabold mb-2 text-left">{project.title}</h2>
        <img
          src={project.img}
          alt={project.title}
          class={`rounded-lg ${project.classImg}`}
        />
      </div>
    </a>
  ))}
</div>
