---
import { Image } from "astro:assets";
const { title, imageSrc, imageAlt, experienceLevel,titleClass,experienceClass } = Astro.props;
---

<span
    class="col-span-1 bg-[#fffcf0] p-4 flex flex-col items-center justify-center rounded-lg shadow-md hover:scale-105 transition duration-250 ease-in-out "

>

    <h5 class=`font-bold leading-6  text-lg text-center mb-2 ${titleClass}`>{title}</h5> 
    <Image
        src={imageSrc}
        alt={imageAlt}
        width="100"
        height="100"
    />
    <h6 class="font-semibold mt-1">Experience</h6>
    <p class=`text-sm ${experienceClass}`>{experienceLevel}</p>
</span>
