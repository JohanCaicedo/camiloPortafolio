---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ProjectSection from "../components/ProjectSection.astro";
import Badge from "../components/Badge.astro";
import ProjectSpecs from "../components/ProjectSpecs.astro";
import Title from "../components/Title.astro";
import TargetArrow from "../icons/TargetArrow.astro";
import Bifcase from "../icons/Bifcase.astro";
import HandClick from "../icons/HandClick.astro";
import Collage from "../icons/Collage.astro";
import Start from "../icons/Start.astro";
import Gallery from "../components/ImageGallery.astro";
---

<Layout
  title="Editorial Design - Portfolio"
  description="Editorial design portfolio"
  image="https://firebasestorage.googleapis.com/v0/b/camilo-portfolio-77b8a.appspot.com/o/Editorial%20Design%20Image.webp?alt=media&token=aabfa3b4-9eb3-452b-b0d2-bb66de2456ea"
  url="https://paperfoxstudio.site/editorial-design"
>
  <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <SectionContainer>
      <header class="mb-8">
        <h1
          class="text-sm md:text-base lg:text-lg font-medium text-right text-gray-800 dark:text-gray-200"
        >
          portfolio/editorial-design
        </h1>
      </header>

      <ProjectSection
        link="https://ilsa.org.co/"
        title="ILSA Editorial Design"
        image="/Editorial-Design ID.webp"
      />

      <nav class="flex flex-wrap justify-center gap-2 my-6">
        <Badge
          content="Editorial Design"
          bgColor="bg-[#e46f4d]"
          textColor="text-[#4a241b]"
          darkBgColor="dark:bg-[#4a241b]"
          darkTextColor="dark:text-[#e46f4d]"
        />
        <Badge
          content="Photoshop"
          bgColor="bg-[#97acc6]"
          textColor="text-[#22282e]"
          darkBgColor="dark:bg-[#22282e]"
          darkTextColor="dark:text-[#97acc6]"
        />
        <Badge
          content="Illustration"
          bgColor="bg-[#f1cd71]"
          textColor="text-[#584b2c]"
          darkBgColor="dark:bg-[#584b2c]"
          darkTextColor="dark:text-[#f1cd71]"
        />
        <Badge
          content="InDesign"
          bgColor="bg-[#a3cda1]"
          textColor="text-[#293329]"
          darkBgColor="dark:bg-[#293329]"
          darkTextColor="dark:text-[#a3cda1]"
        />
        <Badge
          content="Typography"
          bgColor="bg-[#e4d6f2]"
          textColor="text-[#343037]"
          darkBgColor="dark:bg-[#343037]"
          darkTextColor="dark:text-[#e4d6f2]"
        />
        <Badge
          content="Composition"
          bgColor="bg-[#ebbbaa]"
          textColor="text-[#161210]"
          darkBgColor="dark:bg-[#161210]"
          darkTextColor="dark:text-[#ebbbaa]"
        />
      </nav>

      <div class="grid gap-8 md:grid-cols-2">
        <section>
          <h2
            class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4"
          >
            General description
          </h2>
          <p class="text-gray-700 dark:text-gray-300">
            <strong>Experienced editorial designer since 2016.</strong> I began my
            career at ILSA with the publication "El Otro Derecho 52". Since then,
            I have led the organization's editorial design, creating original covers,
            adapting illustrations and layouts for various publications, including
            collections like "El Otro Derecho" and "Textos de Aquí y Ahora". My experience
            also includes collaborations with the JEP and other human rights NGOs.
          </p>
        </section>

        <section>
          <h2
            class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4"
          >
            About the company
          </h2>
          <p class="text-gray-700 dark:text-gray-300">
            ILSA, founded in 1978 as an NGO, focuses on alternative legal
            services and supporting social movements, grassroots organizations,
            and disadvantaged sectors. Initially operating in various Latin
            American countries, it has focused on Colombia since 1988.
          </p>
        </section>
      </div>

      <ProjectSpecs
        rol="Lead Editorial Designer, Illustrator"
        team="Freddy Ordoñez"
        duration="8 years"
        tools="Photoshop, Illustrator, InDesign"
        time="Experience"
      />

      <section class="mt-12">
        <Title icon={TargetArrow} text="Approach and experience" />
        <div
          class="bg-[#fafaf6] dark:bg-gray-800 p-6 rounded-lg shadow-md mt-4"
        >
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            My approach to editorial design is based on
          </h3>
          <ul class="space-y-4 text-gray-700 dark:text-gray-300">
            <li>
              <strong class="text-gray-900 dark:text-gray-100"
                >👁️ Clarity and readability:</strong
              > I prioritize effective communication of ideas, ensuring content is
              easy to read and understand.
            </li>
            <li>
              <strong class="text-gray-900 dark:text-gray-100"
                >🌟 Impactful aesthetics:</strong
              > I create visually appealing designs that reflect the theme and tone
              of each publication.
            </li>
            <li>
              <strong class="text-gray-900 dark:text-gray-100"
                >⭕ Consistency with brand identity:</strong
              > I design covers and publications that align with the visual identity
              of ILSA and other organizations I collaborate with.
            </li>
          </ul>
        </div>
      </section>
      <section class="grid grid-cols-4 gap-4 mt-6 ">
        
        <div class="bg-[#ff906e] dark:bg-gray-800 p-6 rounded-lg shadow-mb col-span-2 row-span-4 text-[#170a08]">
          <h3
          class="flex gap-2 items-center text-2xl md:text-3xl font-bold text-primary mb-6 dark:text-[#fafaf6]"
        >
          <HandClick class="size-6 text-[#4a241b]" /> Skills
        </h3>
         
          <ul class=" text-[#4a241b] dark:text-gray-300">
            <li class="mt-3"><strong>🖌️ Cover conceptualization and design:</strong> Creating original covers that capture the essence of the publication.</li>
            <li class="mt-3"><strong>💻 Adaptation of illustrations and murals:</strong> Integrating pre-existing visual elements into the editorial design.</li>
            <li class="mt-3"><strong>📏 Layout and typesetting:</strong> Organizing content in a clear and attractive way, optimizing readability and visual flow.</li>
          </ul>
        </div>
        <div class="bg-[#a5bdd6] dark:bg-gray-800 p-6 rounded-lg shadow-sm  col-span-2 row-span-4">
          <h3
          class="flex gap-2 items-center text-2xl md:text-3xl font-bold text-primary mb-6 dark:text-[#fafaf6]"
        >
          <Bifcase class="size-6 text-[#22282e]" />Featured projects
        </h3>
          <ul class=" text-[#22282e] dark:text-gray-300">
            <li class="mt-3"><strong>📕 El Otro Derecho 62:</strong> Cover and interior design, maintaining consistency with the collection.</li>
            <li class="mt-3"><strong>🪄 Collection redesigns: </strong> Updating the visual identity of "El Otro Derecho" and "Textos de Aquí y Ahora."</li>
            <li class="mt-3"><strong>🤝 Collaborations:</strong> Design of booklets, academic journals, and other materials for the JEP and various NGOs.</li>
          </ul>
        </div>


      </section>

      <section class="grid grid-cols-6 mt-4">
        <article class="bg-[#a3cda1] dark:bg-gray-800 p-6 rounded-lg shadow-sm col-start-2 col-span-4">
          <h3
          class="flex gap-2 items-center text-2xl md:text-3xl font-bold text-primary mb-6 text-[#293329] dark:text-[#fafaf6]"
        >
          <Collage class="size-6 " />Book cover design structure
        </h3>
          <ul class="text-[#293329] dark:text-gray-300">
            <li>
              📝 Text analysis, genre, audience, and client meeting.
            </li>
            <li class="mt-3">
              ✏️ Create sketches and mood boards to explore visual concepts.
            </li>
            <li class="mt-3">
             💬 Select typography and page format.
            </li>
            <li class="mt-3">
              🎨 Experiment with compositions and color palettes.
            </li>
            <li class="mt-3">
             💻 Present options to the client and make revisions.
            </li>
            <li class="mt-3">
             🖨️ Prepare final files for printing.
            </li>
          </ul>
        </article>
       
      </section>
      <section>
        <Title icon={Start} text="Featured book covers" />
        <Gallery 
images={[
   {
  src: "/Editorial-Desing-Cover (1).webp",
  alt: "Editorial",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (8).webp",
  alt: "Editorial 2",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (2).webp",
  alt: "Editorial 3",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (3).webp",
  alt: "Editorial 4",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (4).webp",
  alt: "Editorial 5",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (5).webp",
  alt: "Editorial 7",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (6).webp",
  alt: "Editorial 7",
  width: 480,
  height: 480,
},
{
  src: "/Editorial-Desing-Cover (7).webp",
  alt: "Editorial 8",
  width: 480,
  height: 480,
},




]}
columns={2}
/>

      </section>
    </SectionContainer>
  </main>
</Layout>
